<?xml version="1.0" encoding="utf-8"?>
<!-- i made layout so that this app runs in every size device ,
 not static attributes(height , width ) -->
<!-- different mobile phones have different size , so scrollview to scrolling in small size mobile  phones-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#FFA500"
    android:layout_height="fill_parent">

    <!-- this is the main layout whose orientation is vertical start-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!-- this text view is used  for top text Calculator App-->
        <TextView
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Calculator App"
            android:layout_margin="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--this is a view to show a boundary in between top text and edit text-->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>
<!--        edit text where user can enter values to calculate-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enteredResult"
            android:hint="Enter Value"
            android:text="0"
            android:layout_margin="5dp"
            />
        <!--this is a view to show a boundary in between -->
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="10px"/>


        <!-- sub linear layouts with horizontal orientation start-->
        <!-- a linear layout in which AC and รท button are present-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btcancel"
                android:text="AC"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <View
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="10px"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btdivide"
                android:text="รท"
                android:onClick="findOutput"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>

        <!-- a linear layout in which 7,8,9 and * button are present-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt7"
                android:text="7"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt8"
                android:text="8"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt9"
                android:text="9"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btmultiply"
                android:text="*"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>
        <!-- a linear layout in which 4,5,6 and - button are present-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt4"
                android:text="4"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt5"
                android:text="5"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt6"
                android:text="6"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btminus"
                android:text="-"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>
        <!-- a linear layout in which 1,3,2 and + button are present-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt1"
                android:text="1"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt3"
                android:text="3"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt2"
                android:text="2"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btplus"
                android:text="+"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
        </LinearLayout>
        <!-- a linear layout in which 0,. and = button are present-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/bt0"
                android:text="0"
                android:onClick="findOutput"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="10px"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btdecimal"
                android:text="."
                android:onClick="findOutput"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btequal"
                android:text="="
                android:onClick="findOutput"
                android:layout_marginRight="1dp"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </LinearLayout>
        <!-- sub linear layouts with horizontal orientation end-->

    </LinearLayout>
    <!-- main linear layout with vertical oreientation end-->

</ScrollView>

